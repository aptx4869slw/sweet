<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.song.sweetgirl.dao.UserDAO">
    <resultMap id="userMap" type="com.song.sweetgirl.model.User">
        <result property="id" column="id"/>
        <result property="number" column="number"/>
        <result property="string" column="string"/>
        <result property="price" column="price"/>
        <result property="flag" column="flag"/>
        <result property="localDateTime" column="local_date_time"/>
    </resultMap>

    <select id="findUser" resultMap="userMap" parameterType="com.song.sweetgirl.model.User">
        SELECT * FROM User
        WHERE username = #{username} AND password = #{password}
    </select>

</mapper>
